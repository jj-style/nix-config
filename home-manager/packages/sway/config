# alt+tab behaviour for switching windows across all open workspaces
# TODO: wofi
bindsym Mod1+Tab exec --no-startup-id "rofi -modi 'window' -show window -font 'DejaVu 13'"

exec --no-startup-id systemctl --user restart wallpaperrsd.service
bindsym $mod+Control+less exec --no-startup-id wallpaperrs previous
bindsym $mod+Control+greater exec --no-startup-id wallpaperrs next
bindsym $mod+Shift+Control+Home exec --no-startup-id wallpaperrs reset

