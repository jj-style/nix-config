########################
#### Set GTK Theme #####
########################
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Catppuccin-pink'
    gsettings set $gnome-schema icon-theme 'Tela-circle-pink-dark'
    gsettings set $gnome-schema cursor-theme 'macOS-White'
    gsettings set $gnome-schema font-name 'Noto Sans, 10'
}
